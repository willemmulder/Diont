{
	"name": "diont",
	"version": "1.0.0",
	"description": "Easy Service Discovery on Local Networks in pure Javascript",
	"main": "dist/index.js",
	"files": [
		"dist/**/*"
	],
	"types": "dist/index.d.ts",
	"scripts": {
		"prebuild": "npm run clean",
		"build": "tsc",
		"clean": "rimraf ./dist/",
		"example:listener": "ts-node-esm ./examples/listener.ts",
		"example:server:1": "ts-node-esm ./examples/server_1.ts",
		"example:server:2": "ts-node-esm ./examples/server_2.ts",
		"example:server:3:broadcast": "ts-node-esm ./examples/server_3_broadcast.ts"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/willemmulder/Diont"
	},
	"keywords": [
		"typescript",
		"udp",
		"multicast",
		"broadcast",
		"service",
		"discovery",
		"mdns",
		"bonjour",
		"diont",
		"local",
		"network"
	],
	"author": "Willem Mulder",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/willemmulder/Diont/issues"
	},
	"homepage": "https://github.com/willemmulder/Diont",
	"devDependencies": {
		"@types/node": "^20.2.5",
		"rimraf": "^5.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.3"
	}
}
